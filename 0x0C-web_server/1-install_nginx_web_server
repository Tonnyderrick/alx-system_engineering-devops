#!/usr/bin/env bash
# This script installs nginx, starts it, and sets a custom "Hello World!" page

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Replace default index.html with "Hello World!" content
echo "Hello World!" > /var/www/html/index.html

# Start nginx (do NOT use systemctl as per task requirement)
service nginx start
